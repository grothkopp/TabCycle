{
  "manifest_version": 3,
  "name": "TabCycle",
  "version": "1.0.0",
  "description": "Unused tabs and tab groups turn from green to yellow to red and close as time passes.",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "alarms",
    "webNavigation",
    "bookmarks"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "images/logo_symbol_16.png",
    "32": "images/logo_symbol_32.png",
    "64": "images/logo_symbol_64.png",
    "128": "images/logo_symbol_128.png",
    "256": "images/logo_symbol_256.png"
  }
}
