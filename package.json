{
  "name": "tabcycle",
  "version": "0.3.0",
  "description": "Chrome extension to manage the lifecycle of opened tabs",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/integration",
    "test:e2e": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/e2e/",
    "test:e2e-chrome": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/e2e-chrome/ --testTimeout=60000 --runInBand",
    "lint": "eslint src/ tests/"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jest/globals": "^29.7.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "puppeteer": "^22.0.0"
  }
}
